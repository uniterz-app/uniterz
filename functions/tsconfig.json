{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],

    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",

    "sourceMap": true,
    "noImplicitAny": false,
    "strict": false,
    "esModuleInterop": true,

    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*"]
}
