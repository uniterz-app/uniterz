{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],

    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",

    "sourceMap": true,
    "noImplicitAny": false,
    "strict": false,
    "esModuleInterop": true,

    // ★ JSON を import 可能にする
    "resolveJsonModule": true,

    // ★ JSON を lib にコピーするため必要
    "allowJs": true,

    "skipLibCheck": true
  },

  // ★ 重要：すべてのファイル（JSON含む）をビルド対象にする
  "include": ["src/**/*"]
}
